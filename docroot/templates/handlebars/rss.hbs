<div class="row">
  {{#if items.length}}
    {{#each items}}
      <h3><a href="{{ permalink }}" target="_blank">{{{ title }}}</a></h3>
      <time>{{ date }}</time>

      <p>{{{ description }}}</p>

      <p><a href="{{ permalink }}" target="_blank">Read More &raquo;</a></p>
    {{/each}}
  {{/if}}
</div>